<% render 'shared/page_title' %>
<h1><%= "#{@page_heading}" %></h1>
<br />

<div class="row">
  <aside class="col-md-2 col-md-offset-1">
    <section class="order_info">
      Order Total: <%= humanized_money_with_symbol(@order.total) %>
      <% if !@order.submitted? %>
        <%= form_for(@order, 
                     url: order_submit_path(order_id: @order.id)) do |o| %>
          <%= o.submit "Submit Order", class: "btn btn-primary" %>
        <%end %>
      <% end %>
    </section>
  </aside>

  <div class="col-md-6">
    <h2 class="section">Current items in order</h2>
    <% will_paginate @items %>
    <ul class="index" %>
      <%= render @items %>
    </ul>
    <% if !@order.submitted? %> 
      <%= render 'items/form', 
                  url: user_order_items_path(order_id: @order.id) %>
    <% end %>
  </div>
</div>