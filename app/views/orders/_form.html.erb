<div class="row">
  <div name="order_form" class="col-md-6 col-md-offset-3">

    <%= form_for(@order, url: user_orders_path) do |order| %>
      <%= render 'shared/error_messages', object: order.object %>
        
        <% if admin? %>
          <%= order.label :completed, class: "inline" %>
          <%= order.check_box :completed, 
                              class: "checkbox inline form-control" %>
          <br /><br />
        <% end %>

      <%= order.submit @btn_text, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>