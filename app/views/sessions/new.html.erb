<% render 'shared/page_title' %>
<h1>Login</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(:session, url: login_path) do |session| %>
      
      <%= session.label :email %>
      <%= session.email_field :email, class: 'form-control' %>

      <%= session.label :password %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <%= session.password_field :password, class: 'form-control' %>

      <%= session.submit "Login", class: "btn btn-primary" %>

    <% end %>

  </div>
</div>