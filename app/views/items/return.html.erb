<% render 'shared/page_title' %>
<h1><%= "#{@page_heading}" %></h1>
<br />

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <p>Name: <%= @item.inventory_item.name %></p>
    <p>Quantity alloted to task: <%= @item.quantity %></p> 

    <%= form_for(@item, 
                 url: item_return_path(@item)) do |item| %>
      <%= render 'shared/error_messages', object: item.object %>

      <% if @item.order.nil? %>
        <%= hidden_field_tag :task_id, @item.task.id %>
      <% else %>
        <%= hidden_field_tag :order_id, @item.order.id %>
      <% end %>
      
      <%= item.label :return_quantity %>
      <%= item.number_field :return_quantity, class: "form-control" %>    

      <%= item.submit "Update Task", class: "btn btn-primary" %>
    
    <% end %>
  </div>
</div>