<% render 'shared/page_title' %>
<h1><%= "#{@page_heading}" %></h1>
<br />

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p>Name: <%= @task.name %></p>
    
    <p>Description:<br/><%= @task.description %></p>
    
    <% if !@task.user.nil? %>
      <p>Assigned To: <%= @task.user.name %></p>
    <% end %>

    <% if !@task.plant.nil? %>
      <p>Task For: <%= link_to @task.plant.serial_number,
                               plant_path(@task.plant) %></p>
    <% end %>

    <% if @task.items.any? %>
      <h2 class="section">Items</h2>
      <%= render 'shared/paginate_list', object: @items, 
                                   locals: { class_name: "index", 
                                             display: "bottom"} %>
    <% end %>
    <h2>Add item to task</h2>
    <%= render 'items/form' %>     
  </div>
</div>
