<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@plant_state) do |plant_state| %>
      <%= render 'shared/error_messages', object: plant_state.object %>
      
      <%= plant_state.label :name %>
      <%= plant_state.text_field :name, class: "form-control" %>

      <%= plant_state.submit @btn_text, class: "btn btn-primary" %>
    
    <% end %>
  </div>
</div>