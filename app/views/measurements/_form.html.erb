<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@measurement, url: plant_measurements_path) do |measurement| %>
      <%= render 'shared/error_messages', object: measurement.object %>

        <%= measurement.label :base, "Base in feet" %>
        <%= measurement.number_field :base, step: 0.001, 
          value: (number_with_precision(measurement.object.base, 
                  precision: 3) || 0), class: "form-control" %>

        <%= measurement.label :height, "Height in feet" %>
        <%= measurement.number_field :height, step: 0.001, 
          value: (number_with_precision(measurement.object.height, 
                  precision: 3) || 0), class: "form-control" %>

      <%= measurement.submit @btn_text, class: "btn btn-primary" %>
    
    <% end %>
  </div>
</div>