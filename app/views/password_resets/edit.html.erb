<% render 'shared/page_title' %>
<h1>Reset Password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(@user, url: password_reset_path(params[:id])) do |reset| %>
      
      <%= render 'shared/error_messages', object: reset.object %>

      <%= hidden_field_tag :email, @user.email %>

      <%= reset.label :password %>
      <%= reset.password_field :password, class: 'form-control' %>

      <%= reset.label :password_confirmation %>
      <%= reset.password_field :password_confirmation, class: 'form-control' %>

      <%= reset.submit "Update Password", class: "btn btn-main" %>

    <% end %>
  
  </div>
</div>
