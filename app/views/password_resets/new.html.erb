<% render 'shared/page_title' %>
<h1>Forgot Password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(:password_reset, url: password_resets_path) do |reset| %>
     
      <%= reset.label :email %>
      <%= reset.email_field :email, class: 'form-control' %>

      <%= reset.submit "Send Reset Link", class: "btn btn-main" %>

    <% end %>
  
  </div>
</div>
